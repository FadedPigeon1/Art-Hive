# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/arthive
# MongoDB Atlas (recommended):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/arthive?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/arthive

# JWT Secret Key (Change this to a random secure string)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT Expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRE=7d

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000
