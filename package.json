{
  "name": "arthive",
  "version": "1.0.0",
  "description": "ArtHive - A social platform for artists",
  "scripts": {
    "server": "cd backend && npm run dev",
    "server:prod": "cd backend && node server.js",
    "client": "cd frontend && npm start",
    "client:build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy:fly": "cd backend && fly deploy",
    "deploy:frontend": "cd frontend && vercel --prod"
  },
  "keywords": [
    "art",
    "social",
    "mern"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-dom": "^18.3.1",
    "react-masonry-css": "^1.0.16"
  }
}
